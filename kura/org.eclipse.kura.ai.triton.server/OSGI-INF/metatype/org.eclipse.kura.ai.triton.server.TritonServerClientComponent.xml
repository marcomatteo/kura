<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.ai.triton.server.TritonServerClientComponent" 
         name="Nvidia Triton Server Client" 
         description="A wire component for communicating with a Nvidia Triton Server instance">
        
       <!-- <Icon resource="ClockService" size="32"/>-->
        
       	<AD id="server.address"
            name="Nvidia Triton Server address"
            type="String"
            cardinality="0"
            required="true"
            default="localhost"
            description="The address of the Nvidia Triton server to connect to"/>
            
        <AD id="server.port"  
            name="Nvidia Triton Server port"
            type="Integer"
            cardinality="0" 
            required="true"
            default="8000" 
            description="The port to be used for connecting to the Nvidia Triton server"/>
        
        <AD id="model.name"  
            name="Model Name"
            type="String"
            cardinality="0" 
            required="true"
            default="" 
            description="The name of the model">
        </AD>

        <AD id="input.name"  
            name="Input Name"
            type="String"
            cardinality="0" 
            required="true"
            default="" 
            description="The name of the input layer of the model"/>

        <AD id="input.size"  
            name="Input Size"
            type="String"
            cardinality="0" 
            required="true"
            default="" 
            description="The size of the input in the form x,y,z"/>

        <AD id="input.type"  
            name="Input Type"
            type="String"
            cardinality="0" 
            required="true"
            default=""
            description="The type of the input">
           <Option label="BOOL" value="BOOL"/>
           <Option label="INT8" value="INT8"/>
           <Option label="INT16" value="INT16"/>
           <Option label="INT32" value="INT32"/>
           <Option label="INT64" value="INT64"/>
           <Option label="UINT8" value="UINT8"/>
           <Option label="UINT16" value="UINT16"/>
           <Option label="UINT32" value="UINT32"/>
           <Option label="UINT64" value="UINT64"/>
           <Option label="FP32" value="FP32"/>
           <Option label="FP64" value="FP64"/>
           <Option label="BYTES" value="BYTES"/>
        </AD>

        <AD id="output.name"  
            name="Output Name"
            type="String"
            cardinality="0" 
            required="true"
            default="" 
            description="The name of the output layer of the model"/>

        <AD id="output.type"  
            name="Output Type"
            type="String"
            cardinality="0" 
            required="true"
            default=""
            description="The type of the output">
           <Option label="BOOL" value="BOOL"/>
           <Option label="INT8" value="INT8"/>
           <Option label="INT16" value="INT16"/>
           <Option label="INT32" value="INT32"/>
           <Option label="INT64" value="INT64"/>
           <Option label="UINT8" value="UINT8"/>
           <Option label="UINT16" value="UINT16"/>
           <Option label="UINT32" value="UINT32"/>
           <Option label="UINT64" value="UINT64"/>
           <Option label="FP32" value="FP32"/>
           <Option label="FP64" value="FP64"/>
        </AD>
        
        <AD id="emit.on.empty.result"
            name="Emit on Error"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="Defines the behaviour of the component if the result of the inference is empty or some error happens. If set to true, an empty envelope will be emitted, if set to false no envelopes will be emitted."/>

    </OCD>
    <Designate factoryPid="org.eclipse.kura.ai.triton.server.TritonServerClientComponent">
        <Object ocdref="org.eclipse.kura.ai.triton.server.TritonServerClientComponent"/>
    </Designate>
</MetaData>
