<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.ai.triton.server.TritonServerService" 
         name="Nvidia Triton Server" 
         description="Configuration for the Nvidia Triton Server">
        
       <!-- <Icon resource="ClockService" size="32"/>-->
        
        <AD id="enable"  
            name="Enable the Nvidia Server"
            type="Boolean"
            cardinality="0" 
            required="true"
            default="false" 
            description="Start an instance of Nvidia Server on localhost.">
        </AD>
       
        <AD id="server.ports"  
            name="Nvidia Triton Server ports"
            type="Integer"
            cardinality="3" 
            min="1024"
            max="65535"
            required="true"
            default="4000,4001,4002" 
            description="The ports used by the server to provide HTTP, GPRC and Metrics services.">
        </AD>

        <AD id="model.repository.path"  
            name="The path for the model repository"
            type="String"
            cardinality="0" 
            required="true"
            default="/home/eurotech/Downloads/server/docs/examples/model_repository" 
            description="The path on the filesystem where the models are stored.">
       </AD>

        <AD id="backends.path"  
            name="The path for the backends"
            type="String"
            cardinality="0" 
            required="true"
            default="/home/eurotech/Downloads/tritonserver/backends" 
            description="The path on the filesystem where the backends are stored.">
            </AD>
            
        <AD id="backends.config"  
            name="The optional configuration for the backends"
            type="String"
            cardinality="0" 
            required="true"
            default="tensorflow,version=2" 
            description="A semi-colon separated list of configuration for the backends. i.e. tensorflow,version=2;tensorflow,allow-soft-placement=false">
        </AD>

    </OCD>
    <Designate pid="org.eclipse.kura.ai.triton.server.TritonServerService">
        <Object ocdref="org.eclipse.kura.ai.triton.server.TritonServerService"/>
    </Designate>
</MetaData>
